
.slider 
    max-width 770px
    padding-top 2px
    padding-left 4px
    margin-left 5px
    font-size 0
    sprite $slider-line
    margin-bottom 80px
    @media tablet
        display none
    
    &__thumb 

        position relative
        left 369px
        bottom -8px
        sprite $slider-polz
        cursor pointer

    &__item 
        padding 0
        display inline-block
        width 30%
        vertical-align top
        text-align left
        font-size 13px
        font-weight bold
        padding-top 38px
        padding-right 6%
        line-height 19px
    
    & li:nth-child(2),
    & li:nth-child(5) 
        width 19.5%
        padding-left 0.5%
        padding-right 0
        
    & li:nth-child(4) 
        width 31%
        padding-right 8%
    
    & li:nth-child(5) 
        width 19%
        text-align right
        margin-top 5px
    
    &-title 
        padding-top 58px
        padding-left 10px
    
.radiobox__radio--for-tablet
    display none
    @media tablet
        display block
        font-size 20px
        padding-left 2px
        
    
    & label 
        display block
        line-height 27px
        padding-top 10px
    
